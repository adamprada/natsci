title = {{Quantum delocalization of protons in the hydrogen-bond network of an enzyme active site}},
url = {http://www.pnas.org/content/111/52/18454.abstract http://www.pnas.org/lookup/doi/10.1073/pnas.1417923111},
volume = {111},
year = {2014}
}
