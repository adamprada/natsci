author = {Chandler, David and Wolynes, Peter G.},
doi = {10.1063/1.441588},
file = {:home/ada/Documents/Mendeley Desktop/Chandler, Wolynes - 1981 - The Journal of Chemical Physics.pdf:pdf},
issn = {0021-9606},
journal = {J. Chem. Phys.},
number = {7},
